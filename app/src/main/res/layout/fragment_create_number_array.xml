<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorThemeLight"
    android:orientation="vertical">

    <!--toolbar-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        android:background="@color/colorThemeBold">

        <TextView
            android:id="@+id/tvToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/padding_5dp"
            android:text="Tạo dàn số"
            android:textColor="@color/colorThemeLight"
            android:textSize="@dimen/text_size_header"
            android:typeface="normal" />

    </androidx.appcompat.widget.Toolbar>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2dp"
                android:layout_marginBottom="@dimen/margin_2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvViewCombineBridge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_corners_primary"
                    android:gravity="center"
                    android:padding="@dimen/padding_10dp"
                    android:text="Xem cầu"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvViewCycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_corners_primary"
                    android:gravity="center"
                    android:padding="@dimen/padding_10dp"
                    android:text="Can chi"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvReference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_corners_primary"
                    android:gravity="center"
                    android:padding="@dimen/padding_10dp"
                    android:text="Tham khảo"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvQuickCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_corners_primary"
                    android:gravity="center"
                    android:padding="@dimen/padding_10dp"
                    android:text="Tạo nhanh"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_8dp"
                android:layout_marginRight="@dimen/padding_8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bộ số:"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/edtSet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:layout_weight="2"
                    android:hint="ex: 3 8"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chạm:"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/edtTouch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="ex: 4 8"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_8dp"
                android:layout_marginRight="@dimen/padding_8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng:"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/edtSum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:layout_weight="2"
                    android:hint="ex: 5 8"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chi:"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/edtBranch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="ex: 6 8"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_8dp"
                android:layout_marginRight="@dimen/padding_8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đầu:"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/edtHead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:layout_weight="2"
                    android:hint="ex: 7 8"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đuôi:"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/edtTail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="ex: 8 8"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_8dp"
                android:layout_marginRight="@dimen/padding_8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="K.hợp:"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/edtCombineNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="ex: 58 68"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_8dp"
                android:layout_marginRight="@dimen/padding_8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thêm:"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/edtAddingNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="ex: 38 48"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_8dp"
                android:layout_marginRight="@dimen/padding_8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bỏ:"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/edtRemovingNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="ex: 68 78"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_8dp"
                android:layout_marginRight="@dimen/padding_8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Càng 3:"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/edtThirdClaw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="ex: 1 2 3 4"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCreate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:background="@drawable/border_corners_primary"
                        android:padding="@dimen/padding_10dp"
                        android:text="  Tạo  "
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tvArrayCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:text="0 số"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edtNumberArray"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:hint="dàn số được tạo ở đây."
                        android:lineSpacingExtra="2dp"
                        android:minLines="4"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvExportCouple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_corners_primary"
                    android:gravity="center"
                    android:padding="@dimen/padding_10dp"
                    android:text="Nạp lên"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvExportTriad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_corners_primary"
                    android:gravity="center"
                    android:padding="@dimen/padding_10dp"
                    android:text="Nạp xuống"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvExport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_corners_primary"
                    android:gravity="center"
                    android:padding="@dimen/padding_10dp"
                    android:text="Xuất"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tvClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_corners_primary"
                    android:gravity="center"
                    android:padding="@dimen/padding_10dp"
                    android:text="Tạo lại"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:text="Tạo dàn 3 càng"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvViewJackpot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:background="@drawable/border_corners_primary"
                    android:padding="@dimen/padding_10dp"
                    android:text="  Bảng ĐB  "
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvSubJackpot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:text="11385\n22486"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size_big" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgClear"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_3dp"
                            android:src="@drawable/ic_cancel" />

                        <ImageView
                            android:id="@+id/imgSave"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_save" />

                        <ImageView
                            android:id="@+id/imgExport"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_weight="1"
                            android:padding="1dp"
                            android:src="@drawable/ic_export" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNumberCounter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:gravity="center"
                        android:text="0 số được chọn"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size"
                        android:textStyle="italic" />

                </LinearLayout>

            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/hsThirdClaw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6dp"
                android:scrollbars="horizontal|vertical" />

            <HorizontalScrollView
                android:id="@+id/hsNumberTable1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_6dp"
                android:scrollbars="horizontal|vertical" />

            <TextView
                android:id="@+id/tvShowTriadList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_8dp"
                android:lineSpacingExtra="2dp"
                android:text="Dàn số 3 càng (đã lưu):"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>